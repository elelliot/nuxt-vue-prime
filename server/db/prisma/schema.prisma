// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}

model Address {
  id        Int     @id @default(autoincrement())
  region  String
  city String
  country String
  long Int? @db.SmallInt
  lat Int? @db.SmallInt
  streetAddress String
  addressLine1 String
  addressLine2 String?
  addressLine3 String?
  addressLine4 String?
  postalCode String
}

model Property {
  id        Int     @id @default(autoincrement())
  price     Int 
  models    Int     @db.SmallInt
  capacity  Int     @db.SmallInt
  dimentions Int    @db.SmallInt
  disambiguatingDescription String
  description String
  address_id  Int
}



model ContactInfo {
  id  Int     @id @default(autoincrement())
  created_at DateTime
  deleted_at DateTime
  updated_at DateTime
  active Boolean
}
